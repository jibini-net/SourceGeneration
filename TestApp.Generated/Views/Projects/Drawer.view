state {
	bool? open,
	bool startOpen
}

interface {
	Toggle()
}

inject({TestApp.Services.IResourceInliner} {inliner})

div(| class = {"_Drawer"} |
	child({0})
)

div(|
	class = {"d-flex flex-row"},
	style = {"width: 100%;cursor: pointer;"},
	onclick = {$"Drawer.toggle(this);"},
	{data-state} = {(open ?? startOpen) ? "open" : "closed"}
	|

	h3(| class = {"mx-auto"} |
		i(| class = {
			$"fa fa-chevron-{((open ?? startOpen) ? "up" : "down")}"} |)
	)

)
